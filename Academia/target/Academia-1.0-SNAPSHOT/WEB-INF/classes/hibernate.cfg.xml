<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/academia?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.internal.classic.ClassicQueryTranslatorFactory</property>
    <mapping resource="com/escuela/academia/Administrador.hbm.xml"/>
    <mapping resource="com/escuela/academia/Horario.hbm.xml"/>
    <mapping resource="com/escuela/academia/Profesor.hbm.xml"/>
    <mapping resource="com/escuela/academia/Apoderado.hbm.xml"/>
    <mapping resource="com/escuela/academia/CursoHorario.hbm.xml"/>
    <mapping resource="com/escuela/academia/Trabajador.hbm.xml"/>
    <mapping resource="com/escuela/academia/Alumno.hbm.xml"/>
    <mapping resource="com/escuela/academia/AlumnoCurso.hbm.xml"/>
    <mapping resource="com/escuela/academia/Curso.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
